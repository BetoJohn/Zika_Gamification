<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.ifs.mt.zika_gamification.telas.Treinamento">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_treinamento"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D14841"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/iv_voltar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_reply_white_24dp" />

    <!--    <ImageView
            android:id="@+id/iv_logo_menu_principal"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/zika" />-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/zika" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_logo"
                android:text="Treinamento"
                android:id="@+id/tv_treinamento"
                android:textColor="#FEFEFE"
                android:textSize="20sp" />

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

<!--
     <GridView xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/gridview"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
