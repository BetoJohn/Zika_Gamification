<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_etapa"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D14841"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/iv_voltar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_reply_white_24dp" />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/zika" />

            <TextView
                android:id="@+id/tv_treinamento"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/iv_logo"
                android:text="Treinamento"
                android:textColor="#FEFEFE"
                android:textSize="20sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <!--<GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tb_etapa"
        android:columnWidth="100dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="35dp"
        android:horizontalSpacing="35dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_etapa"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_treinamento"
        android:scrollbars="vertical" />
</LinearLayout>
